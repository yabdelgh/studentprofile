<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="student_profile">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="first_name" type="VARCHAR(500)"/>
        <column name="last_name" type="VARCHAR(500)"/>
        <column name="email" type="VARCHAR(500)"/>
        <column name="phone_number" type="VARCHAR(500)"/>
        <column name="image_url" type="VARCHAR(500)"/>
        <column name="bio" type="VARCHAR(500)"/>
        <column name="interests" type="VARCHAR(500)"/>
        <column name="skills" type="VARCHAR(500)"/>

        <column name="education_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="student_profile"
              baseColumnNames="education_id"
              referencedTableName="education"
              referencedColumnNames="id"
              constraintName="fk_student_profile_education"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="student_profile_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/student/StudentProfile.csv"
            tableName="student_profile">
      <column name="id" type="NUMERIC"/>
          <column name="first_name" type="STRING"/>
          <column name="last_name" type="STRING"/>
          <column name="email" type="STRING"/>
          <column name="phone_number" type="STRING"/>
          <column name="image_url" type="STRING"/>
          <column name="bio" type="STRING"/>
          <column name="interests" type="STRING"/>
          <column name="skills" type="STRING"/>
        <column name="education" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
